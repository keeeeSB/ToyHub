<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header text-center">
        <h3><%= @toy.name %></h3>
      </div>
      <div class="card-body">
        <p class="mb-3"><strong>価格:</strong> ¥<%= number_with_delimiter(@toy.price.to_i) %></p>
        <p class="mb-3"><strong>説明:</strong></p>
        <p><%= @toy.description %></p>
      </div>
      <div class="card-footer d-flex justify-content-end">
        <%= link_to "編集", edit_toy_path(@toy), class: "btn btn-warning btn-sm me-2" %>
        <%= link_to "削除", toy_path(@toy),
                            data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm me-2" %>
      </div>
    </div>
  </div>
</div>
