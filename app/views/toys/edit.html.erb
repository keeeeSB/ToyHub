<h2 class="text-center">おもちゃ編集</h2>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: @toy, local: true) do |f| %>
      <%= render "shared/error_messages", object: @toy %>

      <div class="mb-3">
        <%= f.label :name, "商品名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, "商品説明", class: "form-label" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :price, "値段", class: "form-label" %>
        <%= f.number_field :price, step: 1, min: 0, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "更新", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
